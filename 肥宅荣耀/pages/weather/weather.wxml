<view>   
  <text>{{weatherData}}</text>   
</view>  
<view style="padding-top:30px"></view>  
<block wx:for="{{futureWeather}}">  
    <view style="border:1px solid #ccc; margin:5px">  
        <view>{{item.date}}</view>  
        <view>{{item.temperature}}</view>  
        <view>{{item.weather}}</view>  
        <view>{{item.wind}}</view>  
    </view>  
</block>  